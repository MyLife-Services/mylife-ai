{
	"$schema": "http://json-schema.org/schema",
	"$id": "mylife-services-agent-json-schema",
	"required": ["id", "mbr_id", "being", "name"],
	"type": "object",
	"name": "Agent",
	"properties": {
		"id": {
			"description": "uuid of agent",
			"type": "string",
			"format": "uuid"
		},
		"mbr_id": {
			"type": "string",
			"pattern": "^[\\p{L}\\p{M}\\p{N}\\p{P}\\p{S}&&[^|\\t\\n\\r\\f\\v\\b\\s]]{1,64}\\|[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
			"description": "root member id: [sysName|id]",
			"$comment": "also partitionId for container; NOTE: sysName should not render down to any boolean version of false"
		},
		"parent_id": {
			"type": "string",
			"format": "uuid",
			"description": "parent id of agent"
		},
		"being": {
			"type": "string",
			"const": "agent",
			"description": "root constructor for agent in MyLife"
		},
		"command_word": {
			"type": "string",
			"minimum": 2,
			"maximum": 16,
			"default": "agent",
			"description": "trigger for command mode"
		},
		"description": {
			"type": "string",
			"description": "agent description"
		},
		"developers": {
			"type": "array",
			"description": "endpoint developers"
		},
		"name": {
			"$ref": "mylife-services-globals-json-schema#/definitions/name",
			"$comment": "; NOTE: this is the name of the *agent*, not the member"
		},
		"names": {
			"type": "array",
			"description": "agent names array",
			"default": [{
				"$ref": "#/properties/name"
			}],
			"items": {
				"$ref": "mylife-services-globals-json-schema#/definitions/name"
			},
			"maxItems": 16,
			"minItems": 1,
			"uniqueItems": true,
			"$comment": "Can item contents reference the schema of the name property?"
		},
		"nickname": {
			"$ref": "mylife-services-globals-json-schema#/definitions/name"
		}
	},
	"additionalProperties": true
}